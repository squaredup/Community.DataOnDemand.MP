<ManagementPackFragment SchemaVersion="2.0" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  
  <Monitoring>
    <Tasks>
      <Task ID="Community.DataOnDemand.IIS.AgentTask.GetIISLogFolderMetrics" Accessibility="Public" Enabled="true" Remotable="false" Target="IIS!Microsoft.Windows.InternetInformationServices.WebServer">
        <Category>Operations</Category>
        <ProbeAction ID="Probe" TypeID="Community.DataOnDemand.IIS.Probe.GetIISLogFolderMetrics">
          <Format>csv</Format>
          <TimeoutSeconds>60</TimeoutSeconds>
        </ProbeAction>
      </Task>
    </Tasks>
  </Monitoring>
  
  <LanguagePacks>
    <LanguagePack ID="ENU" IsDefault="true">
      <DisplayStrings>
        <DisplayString ElementID="Community.DataOnDemand.IIS.AgentTask.GetIISLogFolderMetrics">
          <Name>Get IIS Log Folder Metrics (Data On Demand)</Name>
          <Description>Displays IIS log file size information on the target computer. Note: Formats other than CSV are only supported if PowerShell v3 or later is installed on the target server.
          </Description>
        </DisplayString>
      </DisplayStrings>
    </LanguagePack>
  </LanguagePacks>
</ManagementPackFragment>
